                                <div class="card-header">
                                    <h4 class="filter-card-title">Event Name</h4>
                                </div>
                                <div class="card-body filter-card-scroll">
                                    <%
                                        const eventNameFilters = filters.eventNames || ['all'];
                                        const isEventAll = eventNameFilters.includes('all');
                                        const eventNameOptions = (filters.eventNameOptions || []); // pass from backend as distinct list
