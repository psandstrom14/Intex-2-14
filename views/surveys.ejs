                            <th class="sortable" data-column="survey_comments" style="min-width: 80px; width: 80px;">Comments <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="survey_submission_date">Submission Date <span class="sort-icon">‚áÖ</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (survey && survey.length > 0) { %>
                            <% survey.forEach(function(s) { %>
                                <%
                                    let formattedEventDate = '';
                                    if (s.event_date) {
                                        const ed = new Date(s.event_date);
                                        const em = String(ed.getMonth() + 1).padStart(2, '0');
                                        const eday = String(ed.getDate()).padStart(2, '0');
                                        const ey = ed.getFullYear();
                                        formattedEventDate = `${em}/${eday}/${ey}`;
                                    }

                                    let formattedSubmissionDate = '';
                                    if (s.survey_submission_date) {
                                        const sd = new Date(s.survey_submission_date);
                                        const sm = String(sd.getMonth() + 1).padStart(2, '0');
                                        const sday = String(sd.getDate()).padStart(2, '0');
                                        const sy = sd.getFullYear();
                                        formattedSubmissionDate = `${sm}/${sday}/${sy}`;
                                    }
                                %>
                                <tr>
                                    <% if (isLoggedIn && role && role.toLowerCase() === 'admin') { %>
                                    <td>
                                        <input
                                            type="checkbox"
                                            class="row-checkbox"
                                            value="<%= s.survey_id %>"
                                            data-name="<%= s.participant_first_name %> <%= s.participant_last_name %> - <%= s.event_name %>"
                                            aria-label="Select survey for <%= s.participant_first_name %> <%= s.participant_last_name %> - <%= s.event_name %>">
                                    </td>
                                    <% } %>
                                    <td><a href="/profile/<%= s.user_id%>" style="color: var(--primary); text-decoration: underline; font-weight: 600;"><%= s.participant_first_name %></a></td>
                                    <td><a href="/profile/<%= s.user_id%>" style="color: var(--primary); text-decoration: underline; font-weight: 600;"><%= s.participant_last_name %></a></td>
                                    <td><%= s.event_name %></td>
                                    <td><%= formattedEventDate %></td>
                                    <td><%= s.survey_satisfaction_score %></td>
                                    <td><%= s.survey_usefulness_score %></td>
                                    <td><%= s.survey_instructor_score %></td>
                                    <td><%= s.survey_recommendation_score %></td>
                                    <td><%= s.survey_overall_score %></td>
                                    <td><%= s.survey_nps_bucket %></td>
                                    <td style="text-align: center;">
                                        <% if (s.survey_comments && s.survey_comments.trim() !== '') { %>
                                            <button class="btn btn-small view-comments-btn" 
                                                    data-comments="<%= s.survey_comments.replace(/"/g, '&quot;').replace(/'/g, '&#39;') %>"
                                                    data-name="<%= s.participant_first_name %> <%= s.participant_last_name %>"
