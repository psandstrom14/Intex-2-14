                            <th style="width: 40px;"><input type="checkbox" id="selectAll" aria-label="Select all participants"></th>
                            <% } %>
                            <th class="sortable" data-column="participant_first_name">First Name <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_last_name">Last Name <span class="sort-icon">‚áÖ</span></th>
