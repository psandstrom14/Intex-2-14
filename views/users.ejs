                            <th class="sortable" data-column="participant_dob">Date of Birth <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_city">City <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_state">State <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_zip">Zip <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_school_or_employer">School/Employer <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_field_of_interest">Field of Interest <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="total_donations">Total Donations <span class="sort-icon">‚áÖ</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (participant && participant.length > 0) { %>
                            <% participant.forEach(function(p) { %>
                                <% 
                                    let formattedDOB = '';
                                    if (p.participant_dob) {
                                        const dob = new Date(p.participant_dob);
                                        const month = String(dob.getMonth() + 1).padStart(2, '0');
                                        const day = String(dob.getDate()).padStart(2, '0');
                                        const year = dob.getFullYear();
                                        formattedDOB = `${month}/${day}/${year}`;
                                    }
                                %>
                                <tr>
                                    <% if (isLoggedIn && role && role.toLowerCase() === 'admin') { %>
                                    <td><input type="checkbox" class="row-checkbox" value="<%= p.user_id %>" data-name="<%= p.participant_first_name %> <%= p.participant_last_name %>" aria-label="Select participant <%= p.participant_first_name %> <%= p.participant_last_name %>"></td>
                                    <% } %>
                                    <!--FORMAT LINK CHANGE-->
                                    <td><a href="/profile/<%= p.user_id%>" style="color: var(--primary); text-decoration: underline; font-weight: 600;"><%= p.participant_first_name %></a></td>
                                    <td><a href="/profile/<%= p.user_id%>" style="color: var(--primary); text-decoration: underline; font-weight: 600;"><%= p.participant_last_name %></a></td>
                                    <td><%= p.participant_username %></td>
                                    <td><%= p.participant_role || 'N/A' %></td>
                                    <td><%= p.participant_email %></td>
                                    <td><%= p.participant_phone %></td>
                                    <td><%= formattedDOB %></td>
                                    <td><%= p.participant_city %></td>
                                    <td><%= p.participant_state %></td>
                                    <td><%= p.participant_zip %></td>
                                    <td><%= p.participant_school_or_employer %></td>
                                    <td><%= p.participant_field_of_interest %></td>
                                    <td>$<%= p.total_donations || '0.00' %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="<%= (isLoggedIn && role && role.toLowerCase() === 'admin') ? '14' : '13' %>" style="text-align: center; padding: 3rem; color: #999;">                                    No participants found. Click "Add Participant" to get started.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <!--Footer-->
    <footer>
        <p>&copy; 2025 Ella Rises. All Rights Reserved.</p>
