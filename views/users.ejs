                                <option value="participant_phone"<% if (filters.searchColumn === 'participant_phone') { %> selected<% } %>>Phone</option>
                                <option value="participant_city"<% if (filters.searchColumn === 'participant_city') { %> selected<% } %>>City</option>
                                <option value="participant_state"<% if (filters.searchColumn === 'participant_state') { %> selected<% } %>>State</option>
                                <option value="participant_school_or_employer"<% if (filters.searchColumn === 'participant_school_or_employer') { %> selected<% } %>>School/Employer</option>
                                <option value="participant_field_of_interest"<% if (filters.searchColumn === 'participant_field_of_interest') { %> selected<% } %>>Field of Interest</option>
