    <!-- Navigation -->
    <nav>
      <div class="nav-container">
        <div class="logo">
          <a href="/">
            <img src="/images/logo.png" alt="Ella Rises Logo" /> ELLA RISES
          </a>
        </div>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/donate_now">Donate Now</a></li>
          <li class="dropdown">
            <span class="dropdown-toggle">
