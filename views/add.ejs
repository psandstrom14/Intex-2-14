<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add - Ella Rises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-container">
            <div class="logo"><a href="/">Ella Rises</a></div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/donate_now" >Donate Now</a></li>
                <li class="dropdown">
                    <span class="dropdown-toggle">
                        <a href="#" class="selected-nav">Pages â–¾</a>
                    </span>
                    <ul class="dropdown-menu">
                        <li><a href="/users">Users</a></li>
                        <li><a href="/participants">Participants</a></li>
                        <li><a href="/events">Events</a></li>
                        <li><a href="/surveys">Surveys</a></li>
                        <li><a href="/milestones">Milestones</a></li>
                        <li><a href="/donations">Donations</a></li>
                    </ul>
                </li>
                <li><a href="/login" class="login-btn">Login</a></li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Add <%= table_name %></h1>
        </div>
    </section>

    <!--Main Content-->
    <div class="container">
        <div class="add-card">
            <!-- Add-Participant Form -->
            <%if (table_name === "participants"){%>
                <form id="addForm" class="add-form" method="POST" action="/add/participants">
                    <br><br>
                    <p class="text" style="text-align: center;">Please add any neccesary information for a new participant.</p>
                
                    <div class="form-group">
                        <label class="form-label">First Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="participant_first_name" placeholder="John" required autofocus>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Last Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="participant_last_name" placeholder="Doe" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">User Name <span class="required">*</span></label>
                        <input type="text" class="form-input" name="participant_username" placeholder="jdoe" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Password<span class="required">*</span></label>
                        <input type="text" class="form-input" name="participant_password" placeholder="temppass" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Participant Role <span class="required">*</span></label>
                        <select class="form-select" name="participant_role" required>
                            <option value="">Select a level</option>
                            <option value="admin">Admin</option>
                            <option value="participant">Participant</option>
                            <option value="donor">Donor</option>
                        </select>                        
                    </div>
                    
                    <div>
                        <label class="form-label">User Information</label>

                        <div class="form-group">
                            <label class="form-label">Phone Number <span class="required">*</span></label>
                            <input type="tel" class="form-input" name="participant_phone" placeholder="1234567890" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Email <span class="required">*</span></label>
                            <input type="email" class="form-input" name="participant_email" placeholder="example@google.com" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Date of Birth</label>
                            <input type="datetime-local" class="form-input" name="participant_dob"><!--UPDATE LATER: Require for user registration-->
                        </div>

                        <div class="form-group">
                            <label class="form-label">City <span class="required">*</span></label>
                            <input list="cities" name="participant_city">
                            <datalist name="participant_city" id="cities">
                                <option value="Bountiful">Bountiful</option>
                                <option value="Draper">Draper</option>
                                <option value="Layton">Layton</option>
                                <option value="Lehi">Lehi</option>
                                <option value="Logan">Logan</option>
                                <option value="Murray">Murray</option>
                                <option value="Ogden">Ogden</option>
                                <option value="Orem">Orem</option>
                                <option value="Pleasant Grove">Pleasant Grove</option>
                                <option value="Provo">Provo</option>
                                <option value="Riverton">Riverton</option>
                                <option value="Salt Lake City">Salt Lake City</option>
                                <option value="Sandy">Sandy</option>
                                <option value="Spanish Fork">Spanish Fork</option>
                                <option value="St. George">St. George</option>
                                <option value="Taylorsville">Taylorsville</option>
                                <option value="West Jordan">West Jordan</option>
                                <option value="West Valley City">West Valley City</option>
                            </datalist>
                        </div>
    
                        <div class="form-group">
                            <label class="form-label">Zip Code <span class="required">*</span></label>
                            <input type="number" class="form-input" name="participant_zip" placeholder="12345" maxlength="5" required>
                        </div>
    
                        <div class="form-group">
                            <label class="form-label">School or Employer</label>
                            <input type="text" class="form-input" name="participant_school_or_employer" placeholder="BYU"><!--UPDATE LATER: Require for user registration-->
                        </div>
    
                        <div class="form-group">
                            <label class="form-label">Field of Interest</label><!--UPDATE LATER: Require for user registration-->
                            <select class="form-select" name="level">
                                <option value="">Select an Interest</option>
                                <option value="STEM">STEM</option>
                                <option value="Arts">Arts</option>
                                <option value="Both">Both</option>
                            </select>                        
                        </div>
                    </div>

                    <button type="submit" class="submit-btn">Add User</button>
                    <a href="/participants" class="back-btn">Back to Participant List</a>
                </form>
            <!-- Add-Events Form -->
            <%} else if (table === "events"){%>
                <form id="signupForm" class="signup-form" action="/add/events" method="POST">
                    <br><br>
                    <p class="text" style="text-align: center;">Please add any neccesary information for the event.</p>

                    

                    <button type="submit" class="submit-btn">Add Events</button>
                    <a href="/events" class="back-btn">Back to Events List</a>
                </form>
            <!-- Add-survey Form -->
            <%} else if (table === "surveys"){%>
                <form id="signupForm" class="signup-form" action="/add/surveys" method="POST">
                    <br><br>
                    <p class="text" style="text-align: center;">Please add any neccesary information for the survey.</p>

                    <!--Input forms-->

                    <button type="submit" class="submit-btn">Add Survey</button>
                    <a href="/surveys" class="back-btn">Back to Survey Results</a>
                </form>
            <!-- Add-milestones Form -->
            <%} else if (table === "milestones"){%>
                <form id="signupForm" class="signup-form" action="/add/milestones" method="POST">
                    <br><br>
                    <p class="text" style="text-align: center;">Please add any neccesary information for the milestone.</p>

                    

                    <button type="submit" class="submit-btn">Add Milestones</button>
                    <a href="/milestones" class="back-btn">Back to Milestones</a>
                </form>
            <!--Add Donations Form-->
            <%} else if (table === "donations"){%>
                    <form id="signupForm" class="signup-form" action="/add/donations" method="POST">
                        <br><br>
                        <p class="text" style="text-align: center;">Please add any neccesary information for the milestone.</p>
    
                        
    
                        <button type="submit" class="submit-btn">Add Donation</button>
                        <a href="/donations" class="back-btn">Back to Donations</a>
                    </form>
            <!-- Add-Order Form -->
            <%} else { %>
                <form id="signupForm" class="signup-form" action="/add/orders" method="POST">
                    <br><br>
                    <h1 class="title">Add Order</h1>
                    <p class="text" style="text-align: center;">Please add any neccesary information for this order.</p>

                    <div class="form-group">
                        <label class="form-label">Customer ID<span class="required">*</span></label>
                        <input type="number" class="form-input" name="customer_id" placeholder="10" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Employee ID<span class="required">*</span></label>
                        <input type="number" class="form-input" name="employee_id" placeholder="1233" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Quantity <span class="required">*</span></label>
                        <input type="number" class="form-input" name="quantity" placeholder="3" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Date <span class="required">*</span></label>
                        <input type="datetime-local" class="form-input" name="date" required>
                    </div>

                    <button type="submit" class="submit-btn">Add Order</button>
                    <a href="/database" class="back-btn">Back to Database</a>
                </form>
            <%}%>
        </div>
    </div>
    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Ella Rises. All Rights Reserved.</p>
        <p style="margin-top: 1rem; font-size: 0.9rem;">Making a difference, one woman at a time.</p>
    </footer>

    <script>
        // Allow Dropdown to handle delay to increase usability
        let dropdownTimeout;
        const dropdown = document.querySelector('.dropdown');
        const dropdownMenu = document.querySelector('.dropdown-menu');

        if (dropdown && dropdownMenu) {
            dropdown.addEventListener('mouseenter', function() {
                clearTimeout(dropdownTimeout);
                dropdownMenu.style.display = 'block';
            });

            dropdown.addEventListener('mouseleave', function() {
                dropdownTimeout = setTimeout(function() {
                    dropdownMenu.style.display = 'none';
                }, 200); // 200ms delay before closing
            });

            dropdownMenu.addEventListener('mouseenter', function() {
                clearTimeout(dropdownTimeout);
                dropdownMenu.style.display = 'block';
            });

            dropdownMenu.addEventListener('mouseleave', function() {
                dropdownTimeout = setTimeout(function() {
                    dropdownMenu.style.display = 'none';
                }, 200);
            });
        }
    </script>
</body>
</html>