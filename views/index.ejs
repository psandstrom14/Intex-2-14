        <script>
            const LANGUAGE_NAMES = {
                'en': 'ğŸŒ English',
                'es': 'ğŸŒ EspaÃ±ol',
                'fr': 'ğŸŒ FranÃ§ais',
                'de': 'ğŸŒ Deutsch',
