            <!-- Search + Filters-->
            <div class="filter-section">
                <form id="milestonesForm" method="GET" action="/milestones">
                    <div class="filter-row">
                        <!-- Search Dropdown -->
                        <div class="filter-item filter-column">
                            <select name="searchColumn" id="searchColumn" class="form-control">
                                <option value="full_name"<% if (!filters.searchColumn || filters.searchColumn === 'full_name') { %> selected<% } %>>Participant Full Name</option>
                                <option value="participant_first_name"<% if (filters.searchColumn === 'participant_first_name') { %> selected<% } %>>First Name</option>
                                <option value="participant_last_name"<% if (filters.searchColumn === 'participant_last_name') { %> selected<% } %>>Last Name</option>
                                <option value="milestone_title"<% if (filters.searchColumn === 'milestone_title') { %> selected<% } %>>Milestone Title</option>
                                <option value="milestone_category"<% if (filters.searchColumn === 'milestone_category') { %> selected<% } %>>Milestone Category</option>
                                <option value="milestone_date"<% if (filters.searchColumn === 'milestone_date') { %> selected<% } %>>Milestone Date</option>
                            </select>                            
                        </div>

                        <!-- Search Input + Buttons -->
                        <div class="filter-item filter-search">
                            <div class="search-input-group">
                                <input
                                    type="text"
                                    name="searchValue"
                                    id="searchValue"
                                    class="form-control"
                                    placeholder="Search..."
                                    value="<%= filters.searchValue || '' %>"
                                >
                                <button type="submit" class="btn btn-primary">Search</button>
                                <button type="button" class="btn btn-secondary filter-toggle-btn" id="toggleFilters">
                                    <span id="filterButtonText">Filters</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Advanced Filters -->
                    <div id="filterSection" class="advanced-filter-section is-hidden">
                        <h3 class="filter-options-title">Filter Options</h3>
                        <div class="filter-cards-grid">
                            <!-- Milestone Title Filter -->
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="filter-card-title">Milestone Title</h4>
                                </div>
                                <div class="card-body filter-card-scroll">
                                    <%
                                        const milestoneTitleFilters = filters.milestoneTitles || ['all'];
                                        const isMilestoneTitleAll = milestoneTitleFilters.includes('all');
                                        const milestoneTitleOptions = filters.milestoneTitleOptions || [];
                                    %>
                                    <label class="filter-checkbox-label">
                                        <input type="checkbox" name="milestoneTitles" value="all" class="milestoneTitle-checkbox" <%= isMilestoneTitleAll ? 'checked' : '' %>> All
                                    </label>
                                    <% milestoneTitleOptions.forEach(title => { %>
                                        <label class="filter-checkbox-label">
                                            <input type="checkbox" name="milestoneTitles" value="<%= title %>" class="milestoneTitle-checkbox" <%= milestoneTitleFilters.includes(title) ? 'checked' : '' %>> <%= title %>
                                        </label>
                                    <% }); %>
                                </div>
                            </div>

                            <!-- Milestone Category Filter -->
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="filter-card-title">Milestone Category</h4>
                                </div>
                                <div class="card-body">
                                    <%
                                        const categoryFilters = filters.categories || ['all'];
                                        const isCategoryAll = categoryFilters.includes('all');
                                        const categoryOptions = ['undergraduate', 'professional', 'secondary', 'enrichment', 'certificate', 'graduate'];
                                    %>
                                    <label class="filter-checkbox-label">
                                        <input type="checkbox" name="categories" value="all" class="category-checkbox" <%= isCategoryAll ? 'checked' : '' %>> All
                                    </label>
                                    <% categoryOptions.forEach(cat => { %>
                                        <label class="filter-checkbox-label">
                                            <input type="checkbox" name="categories" value="<%= cat %>" class="category-checkbox" <%= categoryFilters.includes(cat) ? 'checked' : '' %>> <%= cat.charAt(0).toUpperCase() + cat.slice(1) %>
                                        </label>
                                    <% }); %>
                                </div>
                            </div>
                        </div>

