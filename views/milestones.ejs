            <!-- Table -->
            <div>
                <table style="border-spacing: 0;">
                    <thead>
                        <tr>
                            <% if (isLoggedIn && role && role.toLowerCase() === 'admin') { %>
                            <th style="width: 40px; min-width: 40px;"><input type="checkbox" id="selectAll" aria-label="Select all milestones"></th>
                            <% } %>
                            <th class="sortable" data-column="participant_first_name" style="min-width: 120px; width: auto; white-space: normal; padding: 0.8rem 0.6rem;">First Name <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="participant_last_name" style="min-width: 120px; width: auto; white-space: normal; padding: 0.8rem 0.6rem;">Last Name <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="milestone_title" style="min-width: 200px; width: auto; white-space: normal; padding: 0.8rem 0.6rem;">Milestone Title <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="milestone_category" style="min-width: 150px; width: auto; white-space: normal; padding: 0.8rem 0.6rem;">Category <span class="sort-icon">‚áÖ</span></th>
                            <th class="sortable" data-column="milestone_date" style="min-width: 120px; width: auto; white-space: normal; padding: 0.8rem 0.6rem;">Milestone Date <span class="sort-icon">‚áÖ</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (milestones && milestones.length > 0) { %>
                            <% milestones.forEach(function(m) { %>
                                <% 
                                    let formattedDate = '';
                                    if (m.milestone_date) {
                                        const date = new Date(m.milestone_date);
                                        const month = String(date.getMonth() + 1).padStart(2, '0');
                                        const day = String(date.getDate()).padStart(2, '0');
                                        const year = date.getFullYear();
                                        formattedDate = `${month}/${day}/${year}`;
                                    }
                                %>
                                <tr>
                                    <% if (isLoggedIn && role && role.toLowerCase() === 'admin') { %>
                                    <td style="max-width: 40px;"><input type="checkbox" class="row-checkbox" value="<%= m.milestone_id %>" data-name="<%= m.participant_first_name %> <%= m.participant_last_name %> - <%= m.milestone_title %>" aria-label="Select milestone for <%= m.participant_first_name %> <%= m.participant_last_name %> - <%= m.milestone_title %>"></td>
                                    <% } %>
                                    <td style="max-width: none; min-width: 120px; padding: 0.8rem 0.6rem;"><a href="/profile/<%= m.user_id %>" style="color: var(--primary); text-decoration: underline; font-weight: 600;"><%= m.participant_first_name %></a></td>
                                    <td style="max-width: none; min-width: 120px; padding: 0.8rem 0.6rem;"><a href="/profile/<%= m.user_id %>" style="color: var(--primary); text-decoration: underline; font-weight: 600;"><%= m.participant_last_name %></a></td>
                                    <td style="max-width: none; min-width: 200px; padding: 0.8rem 0.6rem;"><%= m.milestone_title %></td>
                                    <td style="max-width: none; min-width: 150px; padding: 0.8rem 0.6rem;"><%= m.milestone_category %></td>
                                    <td style="max-width: none; min-width: 120px; padding: 0.8rem 0.6rem;"><%= formattedDate %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="<%= (isLoggedIn && role && role.toLowerCase() === 'admin') ? '6' : '5' %>" style="text-align: center; padding: 3rem; color: #999;">
                                    No milestones found. Click "Add Milestone" to get started.
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

